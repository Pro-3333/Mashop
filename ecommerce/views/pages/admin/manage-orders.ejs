<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>Gestion des Commandes</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
  <style>
    body {
      background: #0d0d0d;
      color: #fff;
      font-family: 'Poppins', sans-serif;
      padding-top: 80px;
    }

    h1 {
      text-align: center;
      font-weight: 700;
      color: #ff8000;
      margin-bottom: 2rem;
    }

    .btn-clear {
      background: #dc3545;
      color: #fff;
      border-radius: 30px;
      padding: 0.5rem 1.5rem;
      font-weight: 600;
      float: right;
      margin-bottom: 1rem;
      transition: all 0.3s;
    }

    .btn-clear:hover {
      background: #c82333;
    }

    .table-custom {
      width: 100%;
      border-collapse: separate;
      border-spacing: 0 0.75rem;
    }

    .table-custom thead th {
      background: rgba(255,128,0,0.15);
      color: #fff;
      font-weight: 600;
      padding: 0.75rem 1rem;
      border-radius: 12px 12px 0 0;
    }

    .table-custom tbody tr {
      background: rgba(255,255,255,0.05);
      border-radius: 12px;
      transition: transform 0.3s, box-shadow 0.3s;
    }

    .table-custom tbody tr:hover {
      transform: translateY(-3px);
      box-shadow: 0 8px 20px rgba(255,128,0,0.4);
    }

    .badge-status {
      padding: 0.35rem 0.8rem;
      border-radius: 12px;
      font-weight: 500;
      color: #000;
    }

    .status-en-attente { background: #ffc107; }
    .status-en-cours { background: #17a2b8; }
    .status-expediee { background: #28a745; }
    .status-livree { background: #6f42c1; }

    ul {
      padding-left: 1rem;
      margin: 0;
    }
    li {
      margin-bottom: 0.3rem;
    }

    .btn-update {
      background: linear-gradient(90deg, #ff8000, #ff5500);
      border: none;
      color: #fff;
      font-weight: 600;
      transition: all 0.3s;
    }
    .btn-update:hover {
      opacity: 0.9;
    }

    .status-select {
      max-width: 150px;
      display: inline-block;
    }

    @media (max-width: 768px) {
      .table-custom thead { display: none; }
      .table-custom tbody tr {
        display: block;
        margin-bottom: 1rem;
      }
      .table-custom tbody td {
        display: flex;
        justify-content: space-between;
        padding: 0.5rem 1rem;
        border: none;
      }
      .table-custom tbody td::before {
        content: attr(data-label);
        font-weight: 600;
        color: #ff8000;
      }
    }
  </style>
</head>
<body>
  <%- include('../../partials/header') %>

  <div class="container mt-5 mb-5">
    <h1>üì¶ Gestion des Commandes</h1>

    <!-- Bouton pour vider toutes les commandes -->
    <form action="/admin/orders/clear" method="POST" onsubmit="return confirm('Voulez-vous vraiment supprimer toutes les commandes ?');">
      <button type="submit" class="btn-clear">Vider toutes les commandes</button>
    </form>

    <div class="table-responsive">
      <table class="table table-custom mt-3">
        <thead>
          <tr>
            <th>ID</th>
            <th>Nom</th>
            <th>Email</th>
            <th>Total</th>
            <th>Statut</th>
            <th>Produits</th>
            <th>Date</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% orders.forEach(order => { %>
            <tr>
              <td data-label="ID"><%= order.id %></td>
              <td data-label="Nom"><%= order.customer_name %></td>
              <td data-label="Email"><%= order.customer_email %></td>
              <td data-label="Total"><strong><%= order.total %> ‚Ç¨</strong></td>
              <td data-label="Statut">
                <% 
                  let statusClass = '';
                  switch(order.status) {
                    case "En attente": statusClass = 'status-en-attente'; break;
                    case "En cours": statusClass = 'status-en-cours'; break;
                    case "Exp√©di√©e": statusClass = 'status-expediee'; break;
                    case "Livr√©e": statusClass = 'status-livree'; break;
                  }
                %>
                <span class="badge badge-status <%= statusClass %>"><%= order.status %></span>
              </td>
              <td data-label="Produits">
                <ul>
                  <% order.OrderItems.forEach(item => { %>
                    <li>
                      <%= item.Product ? item.Product.name : "Produit supprim√©" %> 
                      (x<%= item.quantity %>) - <%= item.price %> ‚Ç¨
                    </li>
                  <% }) %>
                </ul>
              </td>
              <td data-label="Date"><%= order.createdAt.toLocaleDateString("fr-FR") %></td>
              <td data-label="Action">
                <form action="/admin/update-order/<%= order.id %>" method="POST" class="d-flex gap-1">
                  <select name="status" class="form-select status-select">
                    <option <%= order.status==="En attente"?"selected":"" %>>En attente</option>
                    <option <%= order.status==="En cours"?"selected":"" %>>En cours</option>
                    <option <%= order.status==="Exp√©di√©e"?"selected":"" %>>Exp√©di√©e</option>
                    <option <%= order.status==="Livr√©e"?"selected":"" %>>Livr√©e</option>
                  </select>
                  <button type="submit" class="btn-update btn-sm">Mettre √† jour</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>

  <%- include('../../partials/footer') %>
</body>
</html>
